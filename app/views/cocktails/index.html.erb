<div class="banner">
  <h1>Cocktails</h1>
</div>

<div class="container">
<% @cocktails.each do |cocktail| %>
    <div class="card" style="width: 18rem;">
  <div class="card-img-top">
  <%= cl_image_tag("#{cocktail.photo.key}",
      width: 286, height: 250, crop: :fill) %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%=link_to "#{cocktail.name}", cocktail%></h5>
    <p class="card-text">That is a cocktail!</p>
    <%=link_to "More", cocktail, :class => "btn btn-primary"%>
  </div>
</div>
 <% end %>
 </div>

<div class="container">
 <%= link_to 'New Cocktail', new_cocktail_path, :class => "btn btn-secondary"%>
 </div>
 