<div class="banner">
  <h1><%= @cocktail.name %></h1>
</div>
<div class="container-show">
<div class="image">
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
</div>
<div class="description">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Ingredient</th>
      <th scope="col">Doses</th>
    </tr>
  </thead>
  <tbody>
  <% @cocktail.doses.each do |dose| %>
    <tr>
      <td><%= dose.ingredient.name %></td>
      <td><%= dose.description %></td>
      <td><%= link_to dose_path(dose),
          method: :delete,
          data: { confirm: 'Are you sure?'} do %>
          <i class="bi bi-trash"></i> Delete
          <%end  %>
          </td>
    </tr>
    <%end  %>
  </tbody>
</table>
<%= link_to 'Add ingredients with dose', new_cocktail_dose_path(@cocktail), :class => "btn btn-secondary" %>
</div>
</div>
<div class="option">

<%= link_to 'Back', cocktails_path %> 
</div>